<h1>文章列表</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to '查看', article_path( article ) %></td>
      <td><%= link_to '编辑', edit_article_path( article ) %></td>
      <td><%= link_to '删除', article_path( article ), method: :delete, data:{ confirm: '确定删除？' } %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to '新增文章', new_article_path %>
